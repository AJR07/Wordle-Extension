{
  "manifest_version": 2,
  "name": "Corrodle",
  "version": "1.0",
  "description": "Helping you get your daily wordle correct!",
  "icons": {
    "48": "icon/corrodle.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.nytimes.com/games/wordle/index.html*"],
      "js": ["extension/index.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "extension/popup/popup.html",
    "default_icon": {
      "32": "icon/corrodle.png"
    }
  }
}
